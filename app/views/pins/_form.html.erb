<%= simple_form_for(@pin, html: { class: "form-horizontal", :multipart => true}) do |f| %>
  <%= f.error_notification %>

  
    <%= f.input :description, as: :text, input_html: {rows: "3"} %>

    <%= f.file_field :photo %>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
